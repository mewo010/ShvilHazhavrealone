<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/aiPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.AiActivity" >

    <LinearLayout
        android:id="@+id/topMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="?attr/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/separatorLine">

        <Button
            android:id="@+id/btn_Ai_to_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/דףהבית"
            android:textSize="22sp"
            android:singleLine="true"
            android:ellipsize="none"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:fontFamily="@font/text_hebrew"/>

        <Button
            android:id="@+id/btn_Ai_to_DetailsAboutUser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/משתמש"
            android:textSize="23sp"
            android:singleLine="true"
            android:ellipsize="none"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:fontFamily="@font/text_hebrew"/>

        <Button
            android:id="@+id/btn_Ai_to_contact"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/צורקשר"
            android:textSize="23sp"
            android:singleLine="true"
            android:ellipsize="none"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:fontFamily="@font/text_hebrew"/>

        <Button
            android:id="@+id/btn_Ai_to_exit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/התנתקות"
            android:textSize="23sp"
            android:singleLine="true"
            android:ellipsize="none"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:fontFamily="@font/text_hebrew"/>

        <ImageButton
            android:id="@+id/btn_Ai_to_settings"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/הגדרות"
            android:src="@drawable/ic_settings"
            android:layout_marginEnd="8dp" />
    </LinearLayout>
    
    <View
        android:id="@+id/separatorLine"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?attr/colorOnSurface"
        app:layout_constraintTop_toBottomOf="@id/topMenu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/יועץבינהמלאכותית"
                android:textColor="@color/headline"
                android:textSize="40sp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/headline_hebrew"/>
            
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                android:layout_marginBottom="32dp"
                app:strokeColor="?attr/colorOutline">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center_horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/הקלדכאןאתשאלתך"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:boxStrokeWidth="1dp"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/text_hebrew">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_Ai_question"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="80dp"
                            android:gravity="top|start"
                            android:textSize="20sp"
                            android:inputType="textMultiLine"
                            android:lines="4"
                            android:maxLines="6"
                            android:scrollbars="vertical"
                            android:fontFamily="@font/text_hebrew"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_Ai_send_to_Ai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/שלחשאלה"
                        android:textAllCaps="false"
                        android:textSize="25sp"
                        app:cornerRadius="30dp"
                        app:icon="@drawable/ic_send"
                        app:iconSize="28dp"
                        app:iconGravity="textStart"
                        app:iconPadding="12dp"
                        android:fontFamily="@font/text_hebrew"/>

                    <ProgressBar
                        android:id="@+id/progressBar_Ai"
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:visibility="gone" />
                    
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/תשובתהיועץ"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:boxStrokeWidth="1dp"
                        android:layout_marginTop="24dp"
                        android:fontFamily="@font/text_hebrew">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/TV_Ai_txt_response"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="100dp"
                            android:inputType="textMultiLine"
                            android:gravity="top|start"
                            android:textSize="20sp"
                            android:editable="false"
                            android:focusable="false"
                            android:text="@string/התשובהתוצגכאן"
                            android:fontFamily="@font/text_hebrew"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>