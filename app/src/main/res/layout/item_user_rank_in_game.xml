<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeColor="?attr/colorOutline"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:weightSum="10">

        <TextView
            android:id="@+id/tv_ItemUserRank_user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="שם פרטי + משפחה"
            android:textSize="20sp"
            android:fontFamily="@font/text_hebrew"
            android:gravity="right"
            android:ellipsize="end"
            android:maxLines="1" />

        <TextView
            android:id="@+id/tv_ItemUserRank_user_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="email@example.com"
            android:textSize="15sp"
            android:fontFamily="@font/text_english"
            android:gravity="center"
            android:paddingHorizontal="4dp"
            android:ellipsize="middle"
            android:maxLines="1" />

        <TextView
            android:id="@+id/tv_ItemUserRank_wins"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="5"
            android:textSize="28sp"
            android:textColor="@color/headline"
            android:fontFamily="@font/text_hebrew"
            android:gravity="center" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>