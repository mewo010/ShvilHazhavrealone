<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detailsAboutUserPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.DetailsAboutUserActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_container_DetailsAboutUser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/topMenuDetailsAboutUser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="?attr/colorPrimary"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/btn_DetailsAboutUser_to_main"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/דףהבית"
                android:textSize="22sp"
                android:singleLine="true"
                android:ellipsize="none"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:fontFamily="@font/text_hebrew"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btn_DetailsAboutUser_to_DetailsAboutUserPage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/משתמש"
                android:textSize="22sp"
                android:singleLine="true"
                android:ellipsize="none"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:fontFamily="@font/text_hebrew"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btn_DetailsAboutUser_to_contact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/צורקשר"
                android:textSize="22sp"
                android:singleLine="true"
                android:ellipsize="none"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:fontFamily="@font/text_hebrew"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btn_DetailsAboutUser_to_exit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/התנתקות"
                android:textSize="22sp"
                android:singleLine="true"
                android:ellipsize="none"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:fontFamily="@font/text_hebrew"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/btn_DetailsAboutUser_to_settings"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/הגדרות"
                android:src="@drawable/ic_settings"
                android:layout_marginEnd="8dp"
                android:visibility="gone"/>
        </LinearLayout>

        <View
            android:id="@+id/separatorLine_DetailsAboutUser"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="?attr/colorOnSurface"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/topMenuDetailsAboutUser"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_DetailsAboutUser_to_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/חזרה"
            android:textSize="25sp"
            android:fontFamily="@font/text_hebrew"
            app:cornerRadius="25dp"
            app:icon="@drawable/ic_back"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/top_container_DetailsAboutUser"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center_horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/img_DetailsAboutUser_user_profile"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:padding="2dp"
                    app:strokeColor="@color/text_color"
                    app:strokeWidth="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_user" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_DetailsAboutUser_change_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/אייקוןמצלמה"
                    android:layout_gravity="bottom|right"
                    app:fabCustomSize="45dp"
                    app:backgroundTint="@color/background_color_buttons"
                    app:tint="@color/text_color"
                    app:borderWidth="0dp"
                    app:elevation="4dp"
                    app:srcCompat="@drawable/ic_camera"
                    tools:ignore="RtlHardcoded" />
            </FrameLayout>

            <TextView
                android:id="@+id/txt_DetailsAboutUser_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="30dp"
                android:text="@string/שםמלא"
                android:textSize="38sp"
                android:textColor="@color/headline"
                android:fontFamily="@font/headline_hebrew" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                android:layoutDirection="rtl"
                app:strokeColor="?attr/colorOutline"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="30dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/txt_DetailsAboutUser_age"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="0"
                                android:textSize="45sp"
                                android:textColor="@color/headline"
                                android:fontFamily="@font/text_hebrew" />

                            <TextView
                                android:id="@+id/txt_DetailsAboutUser_birth_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="00/00/0000"
                                android:textSize="22sp"
                                android:fontFamily="@font/text_hebrew" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/txt_DetailsAboutUser_wins"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="0"
                                android:textSize="45sp"
                                android:textColor="@color/headline"
                                android:fontFamily="@font/text_hebrew" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/ניצחונות"
                                android:textSize="22sp"
                                android:fontFamily="@font/text_hebrew" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="25dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="16dp"
                            android:contentDescription="@string/אייקוןאימייל"
                            android:src="@drawable/ic_email" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/כתובתאימייל"
                                android:textSize="20sp"
                                android:fontFamily="@font/text_hebrew" />
                            <TextView
                                android:id="@+id/txt_DetailsAboutUser_email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="22sp"
                                tools:text="example@example.com"
                                android:fontFamily="@font/text_english" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="16dp"
                            android:contentDescription="@string/אייקוןסיסמה"
                            android:src="@drawable/ic_password" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/סיסמה"
                                android:textSize="20sp"
                                android:fontFamily="@font/text_hebrew" />
                            <TextView
                                android:id="@+id/txt_DetailsAboutUser_password"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="22sp"
                                tools:text="xxxxxx"
                                android:fontFamily="@font/text_english" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_DetailsAboutUser_edit_user"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="40dp"
                android:text="@string/עריכתפרטים"
                android:textSize="24sp"
                app:cornerRadius="25dp"
                app:icon="@drawable/ic_edit"
                app:iconSize="30dp"
                app:iconGravity="textStart"
                android:fontFamily="@font/text_hebrew" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>