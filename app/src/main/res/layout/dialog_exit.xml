<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_DialogExit_title"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/headline_hebrew"
            android:gravity="center"
            android:text=""
            android:textColor="@color/headline"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txt_DialogExit_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/text_hebrew"
            android:gravity="center"
            android:text=""
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_DialogExit_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:fontFamily="@font/text_hebrew"
                android:text="@string/אישור"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_DialogExit_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:fontFamily="@font/text_hebrew"
                android:text="@string/ביטול"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>