<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/registerPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.RegisterActivity" >

    <LinearLayout
        android:id="@+id/topMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="?attr/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/separatorLine">

        <Button
            android:id="@+id/btn_register_to_landing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/דףראשי"
            android:textSize="22sp"
            android:singleLine="true"
            android:ellipsize="none"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:fontFamily="@font/text_hebrew"/>

        <Button
            android:id="@+id/btn_register_to_contact"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/צורקשר"
            android:textSize="22sp"
            android:singleLine="true"
            android:ellipsize="none"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:fontFamily="@font/text_hebrew"/>

        <Button
            android:id="@+id/btn_register_to_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/התחברות"
            android:textSize="22sp"
            android:singleLine="true"
            android:ellipsize="none"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:fontFamily="@font/text_hebrew"/>

        <Button
            android:id="@+id/btn_register_to_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/הרשמה"
            android:textSize="22sp"
            android:singleLine="true"
            android:ellipsize="none"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:fontFamily="@font/text_hebrew"/>

        <ImageButton
            android:id="@+id/btn_register_to_settings"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/הגדרות"
            android:src="@drawable/ic_settings"
            android:layout_marginEnd="8dp" />
    </LinearLayout>

    <View
        android:id="@+id/separatorLine"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?attr/colorOnSurface"
        app:layout_constraintTop_toBottomOf="@id/topMenu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/separatorLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="20dp">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/הרשמה"
                android:textColor="@color/headline"
                android:textSize="40sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/headline_hebrew"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="30dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:strokeColor="?attr/colorOutline">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:startIconDrawable="@drawable/ic_edit"
                        android:layout_marginBottom="12dp"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeWidth="1dp"
                        android:fontFamily="@font/text_hebrew">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_register_first_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/שםפרטי"
                            android:inputType="textPersonName"
                            android:textSize="23sp"
                            android:fontFamily="@font/text_hebrew"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:startIconDrawable="@drawable/ic_edit"
                        android:layout_marginBottom="12dp"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeWidth="1dp"
                        android:fontFamily="@font/text_hebrew">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_register_last_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/שםמשפחה"
                            android:inputType="textPersonName"
                            android:textSize="23sp"
                            android:fontFamily="@font/text_hebrew"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:startIconDrawable="@drawable/ic_calendar"
                        android:layout_marginBottom="12dp"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeWidth="1dp"
                        android:fontFamily="@font/text_hebrew">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_register_birth_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/תאריךלידה"
                            android:focusable="false"
                            android:clickable="true"
                            android:textSize="23sp"
                            android:fontFamily="@font/text_hebrew"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:startIconDrawable="@drawable/ic_email"
                        android:layout_marginBottom="12dp"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeWidth="1dp"
                        android:fontFamily="@font/text_english">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_register_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/כתובתאימייל"
                            android:inputType="textEmailAddress"
                            android:textDirection="ltr"
                            android:textSize="23sp"
                            android:fontFamily="@font/text_hebrew"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:startIconDrawable="@drawable/ic_password"
                        app:endIconMode="password_toggle"
                        android:layout_marginBottom="20dp"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeWidth="1dp"
                        android:fontFamily="@font/text_english">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_register_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/סיסמה"
                            android:inputType="textPassword"
                            android:textDirection="ltr"
                            android:textSize="23sp"
                            app:boxBackgroundMode="outline"
                            app:boxStrokeWidth="1dp"
                            android:fontFamily="@font/text_hebrew"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRegister"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="@string/הרשמה"
                        android:textSize="25sp"
                        app:cornerRadius="30dp"
                        android:fontFamily="@font/text_hebrew"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>