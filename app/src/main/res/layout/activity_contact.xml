<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contactPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.ContactActivity" >

    <LinearLayout
        android:id="@+id/topMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="?attr/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/separatorLine">

        <Button
            android:id="@+id/btn_contact_to_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/דףהבית"
            android:textSize="22sp"
            android:singleLine="true"
            android:ellipsize="none"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:fontFamily="@font/text_hebrew"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_contact_to_DetailsAboutUser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/משתמש"
            android:textSize="22sp"
            android:singleLine="true"
            android:ellipsize="none"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:fontFamily="@font/text_hebrew"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_contact_to_contact1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/צורקשר"
            android:textSize="22sp"
            android:singleLine="true"
            android:ellipsize="none"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:fontFamily="@font/text_hebrew"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_contact_to_exit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/התנתקות"
            android:textSize="22sp"
            android:singleLine="true"
            android:ellipsize="none"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:fontFamily="@font/text_hebrew"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/btn_contact_to_settings1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/הגדרות"
            android:src="@drawable/ic_settings"
            android:layout_marginEnd="8dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_contact_to_landing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/דףראשי"
            android:textSize="22sp"
            android:singleLine="true"
            android:ellipsize="none"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:fontFamily="@font/text_hebrew"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_contact_to_contact2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/צורקשר"
            android:textSize="22sp"
            android:singleLine="true"
            android:ellipsize="none"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:fontFamily="@font/text_hebrew"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_contact_to_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/התחברות"
            android:textSize="22sp"
            android:singleLine="true"
            android:ellipsize="none"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:fontFamily="@font/text_hebrew"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_contact_to_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/הרשמה"
            android:textSize="22sp"
            android:singleLine="true"
            android:ellipsize="none"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:fontFamily="@font/text_hebrew"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/btn_contact_to_settings2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/הגדרות"
            android:src="@drawable/ic_settings"
            android:layout_marginEnd="8dp"
            android:visibility="gone"/>
    </LinearLayout>

    <View
        android:id="@+id/separatorLine"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?attr/colorOnSurface"
        app:layout_constraintTop_toBottomOf="@id/topMenu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/separatorLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/צורקשר"
                android:textColor="@color/headline"
                android:textSize="40sp"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/headline_hebrew"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:layout_marginBottom="24dp"
                app:strokeColor="?attr/colorOutline">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <ImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="16dp"
                        android:contentDescription="@string/אייקוןצורקשר"
                        android:src="@drawable/ic_contact_support" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/כתובתמייללפניות"
                        android:textSize="30sp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/text_hebrew"
                        tools:ignore="RtlHardcoded" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/אימייל"
                        android:autoLink="email"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="24dp"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/text_english" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/טקסטצורקשר"
                        android:textSize="25sp"
                        android:fontFamily="@font/text_hebrew"
                        tools:ignore="RtlHardcoded" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>